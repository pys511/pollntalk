@CHARSET "UTF-8";

/*
 *	기본 설정
 */
html, body, .pageArea, .pageBox, .contentBox .boardList .ButtonBox,
.contentBox .boardList .ButtonrightBox, .contentTitle, .contentArea 
{
	width: 100%;
}

html, body, .pageArea 
{
	height: 100%;
	margin: 0px 0px 0px 0px;
	padding: 0px 0px 0px 0px;
}

.pageArea 
{
	float: left;
}

.pageArea .pageBox 
{
	float: left;
	overflow: hidden;
}

a:link, a:visited, a:active 
{
	color: #575757;
	text-decoration: none;
}

a:hover 
{
	color: #575757;
	text-decoration: none;
}

body 
{
	font-family: 돋음, Dotum, Baekmuk Dotum, Undotum, Apple Gothic, Latin font, sans-serif;
	-webkit-text-size-adjust: none;
}

ul, li 
{
	list-style-type: none;
}

/*
 *	공통영역
 */
img 
{
	border: 0px;
}

.contentTitle 
{
	margin: 0 auto 0px;
	padding: 5px 5px;
	border-bottom: 5px #1f1e1c solid;
	/*background-color: #2f5597;*/
}

.contentTitle 
{
	height: 75px;
}

.logo 
{
	float: left;
}

.contentArea 
{
	margin: 0 auto 0;
}

.guideHighlight 
{
	color: #ff3c3c;
	font-weight: bold;
}

select::-ms-expand 
{
	display: none;
}

input[type=text], input[type=password], input[type=checkbox] 
{
	border: 1px #a3c2eb solid;
}

button, input, select, textarea 
{
	font-family: inherit;
}

.shortInput 
{
	width: 75px;
}

.inputSelect 
{
	padding: 3px 16px 3px 3px; /* 여백으로 높이 설정 */
	background: url(/app/images/admin/select.gif) no-repeat 95% 50%;
	background-color: #ffffff;
	border: 1px solid #999;
	border-radius: 0px; /* iOS 둥근모서리 제거 */
	-webkit-appearance: none; /* 네이티브 외형 감추기 */
	-moz-appearance: none;
	appearance: none;
	margin-right: 3px;
}

.contentBox .boardList .ButtonBox 
{
	float: left;
}

.contentBox .boardList .ButtonBox 
{
	margin: 10px 0px 10px 0px;
	padding: 5px 5px 5px 5px;
	list-style: none;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
}

.contentBox .buttonBox, .contentBox .buttonrightBox 
{
	height: 30px;
	background-image: url('/app/images/admin/buttonback.png');
	text-align: center;
	padding: 8px 5px 0px 5px;
	-webkit-box-sizing: border-box;
	-moz-box-sizing: border-box;
	box-sizing: border-box;
	border: 1px #91b2e0 solid;
	margin-left: 1px;
	margin-right: 1px;
}

.contentBox .buttonBox span, .contentBox .buttonrightBox span 
{
	font-weight: bold;
	color: #304777;
}

.longInput 
{
	width: 90%;
}

.middleInput 
{
	width: 75%;
}

.defaultInput 
{
	width: 135px;
}

.halfInput 
{
	width: 375px;
	margin-left: 5px;
}

.shortInput, .defaultInput, .longInput, .middleInput, .halfInput 
{
	height: 20px;
}

.contentBox .buttonBox, .contentBox .buttonrightBox 
{
	font-size: 12px;
}

.inputSelect 
{
	font-size: 12px;
}